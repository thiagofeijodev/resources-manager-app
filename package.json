{
  "name": "resources-manager-app",
  "homepage": "./",
  "version": "0.1.0",
  "type": "module",
  "engines": {
    "npm": "11.6.0",
    "node": "24.9.0"
  },
  "scripts": {
    "start": "node .config/rspack/rspack.dev.mjs",
    "build": "rspack --mode production --config .config/rspack/rspack.prod.mjs",
    "analyzer": "rspack build --analyze  --mode development --config .config/rspack/rspack.prod.mjs",
    "lint": "eslint --ext js,jsx 'src/**/**.js' --max-warnings 0",
    "format": "prettier --write .",
    "test": "jest --maxConcurrency=2 --maxWorkers=2",
    "test:ci": "jest --json --outputFile=test-results/jest-results.json",
    "prepare": "husky"
  },
  "dependencies": {
    "@reduxjs/toolkit": "^2.9.0",
    "@rspack/cli": "^1.5.7",
    "@rspack/core": "^1.5.7",
    "ajv": "^8.17.1",
    "baseui": "^15.0.0",
    "formik": "^2.4.6",
    "html-webpack-plugin": "^5.6.4",
    "react": "19.1.1",
    "react-dom": "19.1.1",
    "react-redux": "^9.2.0",
    "react-router-dom": "7",
    "styletron-engine-atomic": "^1.6.2",
    "styletron-react": "^6.1.1"
  },
  "devDependencies": {
    "@rspack/cli": "^1.5.8",
    "@rspack/core": "^1.5.8",
    "@rspack/plugin-react-refresh": "^1.5.1",
    "compression-webpack-plugin": "^11.1.0",
    "favicons": "^7.2.0",
    "favicons-rspack-plugin": "^7.0.0",
    "file-loader": "6.2.0",
    "html-webpack-plugin": "^5.6.4",
    "react-refresh": "^0.18.0",
    "webpack-assets-manifest": "^6.3.0",
    "workbox-webpack-plugin": "7.3.0"
  },
  "optionalDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@swc/core": "^1.13.5",
    "@swc/jest": "^0.2.39",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "6.9.1",
    "@testing-library/react": "16.3.0",
    "@testing-library/user-event": "14.6.1",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "7.37.5",
    "eslint-plugin-react-hooks": "^7.0.0",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.4.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "jest-environment-jsdom": "^30.2.0",
    "lint-staged": "^16.2.4",
    "prettier": "^3.6.2"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,css,md}": [
      "prettier --write",
      "eslint --fix"
    ]
  }
}
